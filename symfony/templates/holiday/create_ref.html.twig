{% extends 'base_holiday.html.twig' %}

{% form_theme formHoliday "bootstrap_4_layout.html.twig" %}

{% block title %}
    {% if not isEditMode %}
        Nouvelles vacances
    {% else %}
        Modification de vacances
    {% endif %}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<h1>

    {% if not isEditMode %}
        Nouvelles vacances
    {% else %}
        Modification de vacances
    {% endif %}

</h1>

{# form(formHoliday) #}

{{ form_start(formHoliday) }}
{# form_widget(formHoliday) #}

{{
    form_row(formHoliday.location,
    {"attr" :
        {"placeholder" : "bali"}
    })
}}
{{ form_row(formHoliday.duration, {"attr" : {"placeholder" : "en jours"}}) }}
{{ form_row(formHoliday.peopleCount, {"attr" : {"placeholder" : "nombre de personnes"}}) }}


<button type="submit" class="btn btn-success">
    {% if isEditMode %}
        Modifier les vacances
    {% else %}
        Ajouter les vacances
    {% endif %}
</button>

{{ form_end(formHoliday) }}


</div>
{% endblock %}
